<div class="container mt-3">
    <div class="row d-flex align-items-start  justify-content-center">
        <div class="col-3">
            <h5>*必填欄位：</h6>
        </div>
        <div class="col-3">
            <h1>請輸入你的支出</h1>
        </div>
    </div>
    <form action="/records" method="POST">
        <div class="row mt-3 d-flex align-items-start  justify-content-center">
            <div class="col-4">
                <label for="name">名稱*：</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="請輸入名稱" required>
            </div>
        </div>
        <div class="row mt-3 d-flex align-items-start  justify-content-center">
            <div class="col-4">
                <label for="date">日期*：</label>
                <input type="date" class="form-control" id="date" name="date" placeholder="請輸入日期" required>
            </div>
        </div>
        <div class="row mt-3 d-flex align-items-start  justify-content-center">
            <div class="col-4">
                <label for="category">類別*：</label>
                <select class="form-select" aria-label="Default select example" id="category" name="category" required>
                    <option value="" selected>類別</option>
                    {{#each categories}}
                    <option value="{{this._id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="row mt-3 d-flex align-items-start  justify-content-center">
            <div class="col-4">
                <label for="amount">金額*：</label>
                <input type="number" min="0" class="form-control" id="amount" name="amount" placeholder="請輸入金額" required>
            </div>
        </div>
        <div class="mt-3 d-flex justify-content-center">
            <button type="submit" class="btn btn-primary">新增支出</button>
        </div>
    </form>
</div>