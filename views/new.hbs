<div class="container mt-3 col-6 ">
    <div class="row d-flex align-items-start">
        <div class="col-3">
            <h5>*必填欄位：</h6>
        </div>
        <div class="col-6">
            <h1>請輸入你的支出</h1>
        </div>
    </div>
    <div class="row col-6 d-flex align-items-center">
       <form action="/records" method="POST" >
       <div>
           <label for="name">名稱*：</label>
           <input type="text" class="form-control" id="name" name="name" placeholder="請輸入名稱">
       </div>
       <div>
           <label for="date">日期*：</label>
           <input type="date" class="form-control" id="date" name="date" placeholder="請輸入日期">
       </div>
       <div>
           <label for="category">類別*：</label>
           <select class="form-select" aria-label="Default select example" id="category" name="category"> 
            <option selected>類別</option>
            {{#each categories}}
            <option>{{this}}</option>
            {{/each}}
        </select>
       </div>
       <div>
           <label for="amount">金額*：</label>
           <input type="number" class="form-control" id="amount" name="amount" placeholder="請輸入金額">
       </div>
       <button type="submit" class="btn btn-primary mt-3">新增支出</button>
       </form>
    </div>
</div>