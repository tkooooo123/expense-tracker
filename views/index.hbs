<div class="container mt-3 col-6 ">
    <div class="row col-8 d-flex justify-content-center">
        <form action="/" method="POST">
         <select class="form-select" aria-label="Default select example" name="selectedCategory" onchange="this.form.submit()">
            {{#if selectedCategory}}
            <option value="{{selectedCategory._id}}" selected>{{selectedCategory.name}}</option>
            <option value="">全部類別</option>
            {{#each notSelectedCategories}}
            <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
            {{else}}
            <option selected>全部類別</option>
            {{#each categories}}
            <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
            {{/if}}
        </select>
        </form>
    </div>
    <div class="row col-8 d-flex align-items-center justify-content-center">
        <div class="mt-4">
            <h6>總金額：</h6>
        </div>
        <div class="d-flex justify-content-end">
            <h1>{{ totalAmount }}</h1>
        </div>
    </div>
    
    <div class="col-8">
 {{#each records}}
    <div class="d-flex align-items-center justify-content-around border">
        <div class="col-1 ">
            <i class="{{this.categoryId.icon}} fa-2xl"></i>
        </div>
        <div class="col-4 py-1 my-0">
            <div >{{this.name}}</div>
            <div >{{this.date}}</div>
        </div>
        <div class="col-1 d-flex justify-content-end">{{this.amount}}</div>
        <div class=" d-flex">
            <a href="/records/{{this._id}}/edit" class="btn btn-secondary">修改</a>
            <form action="/records/{{this._id}}?_method=DELETE" method="POST" style="display: inline">
            <button type="submit" class="btn btn-danger">刪除</button>
            </form>
        </div>
    </div>
    {{/each}}
    <div class="mt-3 d-flex justify-content-center">
        <a href="/records/new" class="btn btn-primary">新增支出</a>
    </div>

    </div>
   
</div>