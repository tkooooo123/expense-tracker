<div class="container mt-3">
    <div class="row  d-flex align-items-start  justify-content-center">
        <div class="col-3">
            <h5>*必填欄位：</h6>
        </div>
        <div class="col-3">
            <h1>請修改你的支出</h1>
        </div>
    </div>
    <form action="/records/{{record._id}}?_method=PUT" method="POST">
        <div class="row mt-3 d-flex align-items-start  justify-content-center">
            <div class="col-4">
                <label for="name">名稱*：</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="請輸入名稱" value="{{record.name}}">
            </div>
        </div>
        <div class="row mt-3 d-flex align-items-start  justify-content-center">
            <div class="col-4">
                <label for="date">日期*：</label>
                <input type="date" class="form-control" id="date" name="date" placeholder="請輸入日期" value="{{record.date}}">
            </div>
        </div>
        <div class="row mt-3 d-flex align-items-start  justify-content-center">
            <div class="col-4">
                <label for="category">類別*：</label>
                <select class="form-select" aria-label="Default select example" id="category" name="category">
                    <option selected>{{record.categoryId.name}}</option>
                    {{#each categories}}
                    <option>{{this}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="row mt-3 d-flex align-items-start  justify-content-center">
            <div class="col-4">
                <label for="amount">金額*：</label>
                <input type="number" class="form-control" id="amount" name="amount" placeholder="請輸入金額" value="{{record.amount}}">
            </div>
        </div>
        <div class="mt-3 d-flex justify-content-center">
            <button type="submit" class="btn btn-primary">送出</button>
        </div>
    </form>
</div>